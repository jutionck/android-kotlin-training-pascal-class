<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_pascal_nav"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.pascalandroid.home.screen.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_counterActivity"
            app:destination="@id/counterActivity" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.pascalandroid.home.screen.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <activity
        android:id="@+id/counterActivity"
        android:name="com.example.pascalandroid.demo.CounterActivity"
        android:label="activity_counter"
        tools:layout="@layout/activity_counter" />
</navigation>