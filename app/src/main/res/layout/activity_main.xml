<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_input_name"
            android:hint="Name" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_input_email"
            android:hint="Name" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_input_alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_input_password"
            android:hint="Address"
            android:inputType="textMultiLine"
            android:lines="5" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_input_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_input_alamat"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/txt_input_age"
            android:hint="Date" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_input_age"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_input_alamat"
            android:layout_alignParentEnd="true"
            android:hint="Age" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_input_age"
            android:layout_alignParentEnd="true"
            android:text="Save" />

    </RelativeLayout>

</ScrollView>