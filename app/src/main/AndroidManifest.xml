<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pascalandroid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_pascal_android"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_pascal_android_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PascalAndroid">
        <activity
            android:name=".screen.HomeActivity"
            android:exported="true" />
        <activity
            android:name=".screen.RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".screen.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".screen.NextActivity"
            android:exported="true" />
        <activity
            android:name=".screen.WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>